<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://user-images.githubusercontent.com/901123/27444852-9f382708-5745-11e7-959f-a2bed199f83f.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "My bookings", user_bookings_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "View tutors", tutors_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Placeholder", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <% if Tutor.exists?(user_id: current_user.id) %>
            <% tutor = Tutor.find_by(user_id: current_user.id) %>
            <%= cl_image_tag tutor.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://via.placeholder.com/150", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "View my profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Placeholder", "#" , class: "dropdown-item" %>
            <%= link_to "My Appointments", tutor_bookings_path(tutor) , class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
