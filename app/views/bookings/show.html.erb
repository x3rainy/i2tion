<div class="container d-flex justify-content-center align-items-center my-3">
  <div class="card" style="width: 40rem;">
    <div class="card-body px-5 border border-dark">
      <h1 class="card-text text-center text-dark">BOOKING</h1>
      <p><strong>Tutor:</strong> <%= @booking.tutor.user.name %></p>
      <p><strong>Customer:</strong> <%= @booking.user.name %></p>
      <p><strong>Location:</strong> <%= @booking.location %></p>
      <p><strong>Comment:</strong> <%= @booking.comments %></p>
      <p><strong>Start:</strong> <%= @booking.start_datetime %></p>
      <p><strong>End:</strong> <%= @booking.end_datetime %></p>
    </div>
    <div class="card-body d-flex flex-column justify-content-center px-5 border border-dark my-3">
      <h1 class="card-text text-center text-dark">REVIEW</h1>
      <% if @booking.review != nil %>
        <p><strong>Content:</strong> <%= @booking.review.content %></p>
        <p><strong>Stars:</strong> <%= @booking.review.stars %></p>
        <%= link_to "ðŸ–‹", edit_booking_review_path(@booking, @booking.review), class: "btn btn-outline-dark" %>
        <%= link_to "ðŸ”¥", booking_review_path(@booking, @booking.review), method: :delete, class: "btn btn-danger" %>
      <% else %>
        <% if !@booking.cancelled? %>
          <%= link_to "Review this booking", new_booking_review_path(@booking), class: "btn btn-lg btn-outline-dark" %>
        <% else %>
          <p class="bg-danger text-center text-white">This booking has been cancelled</p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

